{% extends 'base.html.twig' %}

{% block title %}Mes demandes{% endblock %}

{% block body %}
<header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-12">
                    <h4>Mes demandes</h1>
                        <table id="example1" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Demande NÂ°</th>
                                    <th>RentalProperty</th>
                                    <th>DesiredDate</th>
                                    <th>DesiredTimeLease</th>
                                    <th>Download</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for info in info %}
                                <tr>
                                    <td>{{ info.id }}</td>
                                    <td>{{ info.rentalProperty }}</td>
                                    <td>{{ info.desiredDate ? info.desiredDate|date('Y-m-d') : '' }}</td>
                                    <td>{{ info.desiredTimeLease }}</td>
                                    <td>
                                        <a href="{{ path('dossier_pdf', {'id': info.id}) }}">Download</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="13">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    

            </div>
        </div>
    </div>
</header>

    

{% endblock %}
